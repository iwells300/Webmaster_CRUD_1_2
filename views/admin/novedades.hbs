<section class="adminNovedades adminLogin" id="novedades">
        <div class="taller--fondo__admin"></div>
        <div class="taller--div__novedades">
            <div class="taller--text div__admin__novedades">
                <h3 class="display-3 text-black" style="text-align: center;"><br>Silver concesionaria</h3>
                <h4 class="display-5 text-black" style="text-align: center;">{{saludo}} {{usuario}}</h4>
                <p>Desde esta pagina usted podra editar contenido de la pagina de la concesionaria</p>
                <div class="row container">
                    <div class="col-9">
                        <h3>Listado de novedades</h3>
                    </div>
                    <div class="col-3 text-end">
                        <a href="/admin/novedades/agregar" class="btn btn-lg btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Agregar nueva novedad"><i class="fa fa-plus"></i></a>
                    </div>
                </div>
                <div class="row container">
                    <div class="col">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark bg-primary">
                                <tr>
                                    <th scope="col" class="text-center align-middle">#</th>
                                    <th scope="col" class="text-center align-middle">Título</th>
                                    <th scope="col" class="text-center align-middle">Subtitulo</th>
                                    <th scope="col" class="text-center align-middle">Texto</th>
                                    <th scope="col" class="text-center align-middle">Incluye boton</th>
                                    <th scope="col" class="text-center align-middle">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each novedades}}
                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td>{{titulo}}</td>
                                    <td>{{subtitulo}}</td>
                                    <td>{{cuerpo}}</td>
                                    <td>{{boton}}</td>
                                    <td class="text-center">
                                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-outline-primary"  data-toggle="tooltip" data-placement="top" title="Editar novedad"> <i class="fa fa-pencil"></i></a>
                                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-outline-primary"  data-toggle="tooltip" data-placement="top" title="Eliminar novedad"> <i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                </div>

                
                <p>Usted accedio {{vistas}} {{cantidadVeces}}</p>
                <p>Ultimo acceso: {{tiempo}}</p>  
                <a class="btn btn-dark" href="/admin/login/logout">Cerrar sesión</a>
            </div>
        </div>
            
        
</section>

<script>
          document.getElementById('novedades').scrollIntoView(); 
</script>